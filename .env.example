# App Configuration
APP_ADMIN_USER=admin
APP_ADMIN_PASS=changeme123
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///./app.db

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_PROVIDER=ses
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@example.com

# SMTP Fallback (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@example.com

# AWS Configuration (for AssumeRole from local dev)
# Leave empty if running on EC2 with instance profile
AWS_DEFAULT_REGION=us-east-1

# Security
ALLOWED_REGIONS=us-east-1,us-west-2,eu-west-1
ALLOWED_INSTANCE_TYPES=t3.micro,t3.small,t3.medium,t3.large
ALLOW_ACCESS_KEY_AUTH=false

# Terraform
TERRAFORM_BINARY=/usr/local/bin/terraform
JOBS_WORKDIR=./jobs_workdir
